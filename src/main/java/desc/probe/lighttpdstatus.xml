<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE probedesc PUBLIC "-//jrds//DTD Probe Description//EN"
	"urn:jrds:probedesc">
<probedesc>
	<name>LighttpdStatus</name>
	<probeName>lighttpdstatus_${index}</probeName>
	<probeClass>jrds.probe.ApacheStatus</probeClass>
	<defaultargs>
		<attr name="port">80</attr>
		<attr name="file">/server-status</attr>
	</defaultargs>
	<ds>
		<dsName>TotalAccesses</dsName>
		<dsType>counter</dsType>
		<collect>Total Accesses</collect>
	</ds>
	<ds>
		<dsName>TotalkBytes</dsName>
		<dsType>counter</dsType>
		<collect>Total kBytes</collect>
	</ds>
	<ds>
		<dsName>BusyServers</dsName>
		<dsType>gauge</dsType>
	</ds>
	<ds>
		<dsName>IdleServers</dsName>
		<dsType>gauge</dsType>
	</ds>
	<graphs>
		<name>LighttpdRequests</name>
		<name>LighttpdTransfer</name>
		<name>LighttpdServers</name>
	</graphs>
</probedesc>
