<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE graphdesc PUBLIC "-//jrds//DTD Graph Description//EN"
                           "urn:jrds:graphdesc">
<graphdesc>
        <name>OpenDSCompare</name>
        <graphName>opendscmp-${index}</graphName>
        <graphTitle>LDAP compare requests on ${host} on connexion ${index}</graphTitle>
        <unit>
                <binary/>
        </unit>
        <verticalLabel/>
        <add>
                <name>compareResp</name>
                <graphType>line</graphType>
                <color>BLUE</color>
                <legend>Number of compare responses that have been sent</legend>
        </add>
        <add>
                <name>compareReq</name>
                <reversed>true</reversed>
                <graphType>line</graphType>
                <color>GREEN</color>
                <legend>Number of compare requests that have been received</legend>
        </add>
        <hosttree>
                <pathelement>HOST</pathelement>
                <pathelement>SERVICES</pathelement>
                <pathstring>OpenDS</pathstring>
                <pathelement>INDEX</pathelement>
                <pathstring>compare requests</pathstring>
        </hosttree>
        <viewtree>
                <pathelement>SERVICES</pathelement>
                <pathstring>OpenDS</pathstring>
                <pathstring>compare requests</pathstring>
                <pathelement>HOST</pathelement>
        </viewtree>
</graphdesc>

