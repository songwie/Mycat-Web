<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE graphdesc PUBLIC "-//jrds//DTD Graph Description//EN"
                           "urn:jrds:graphdesc">
<graphdesc>
        <name>OpenDSConnections</name>
        <graphName>opendscnx-${index}</graphName>
        <graphTitle>LDAP connections on ${host} on connexion ${index}</graphTitle>
        <unit>
                <binary/>
        </unit>
        <verticalLabel/>
        <add>
                <name>cnxClosed</name>
                <graphType>line</graphType>
                <color>BLUE</color>
                <legend>Number of client connections that have been closed</legend>
        </add>
        <add>
                <name>cnxEstablished</name>
                <graphType>line</graphType>
                <color>GREEN</color>
                <legend>Number of client connections that have been established</legend>
        </add>
        <hosttree>
                <pathelement>HOST</pathelement>
                <pathelement>SERVICES</pathelement>
                <pathstring>OpenDS</pathstring>
                <pathelement>INDEX</pathelement>
                <pathstring>connections</pathstring>
        </hosttree>
        <viewtree>
                <pathelement>SERVICES</pathelement>
                <pathstring>OpenDS</pathstring>
                <pathstring>connections</pathstring>
                <pathelement>HOST</pathelement>
        </viewtree>
</graphdesc>

